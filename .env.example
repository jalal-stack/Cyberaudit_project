# CyberAudit Environment Configuration

# Database Configuration
DATABASE_URL=postgresql+asyncpg://cyberaudit_user:your_password_here@localhost/cyberaudit

# Application Settings
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Security Settings
SECRET_KEY=your-secret-key-here-generate-a-strong-one

# Scanner Settings
NMAP_PATH=/usr/bin/nmap
MAX_CONCURRENT_SCANS=5

# PDF Generation
TEMP_DIR=/tmp/cyberaudit
CERTIFICATES_DIR=/var/cyberaudit/certificates

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/cyberaudit/app.log
